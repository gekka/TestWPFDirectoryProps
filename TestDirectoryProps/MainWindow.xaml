<Window x:Class="TestDirectoryProps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDirectoryProps"    
        xmlns:lib="clr-namespace:WpfCustomControlLibrary1;assembly=TestRootName.WPFLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300" FontSize="20">
        
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:MainTestClass}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="OK Local Type" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <local:MainTestClass/>
    </Window.DataContext>

    <StackPanel>
        <ContentPresenter Content="{Binding}"/>
        <lib:CustomControl1/>
    </StackPanel>
</Window>
